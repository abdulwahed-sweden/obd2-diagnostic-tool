{
  "name": "obd2-diagnostic-tool",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Professional OBD-II diagnostic trouble codes lookup tool for automotive technicians and car enthusiasts",
  "author": "Abdulwahed",
  "license": "MIT",
  "keywords": [
    "obd2",
    "obd-ii",
    "diagnostic",
    "automotive",
    "car",
    "trouble-codes",
    "tauri",
    "react",
    "desktop-app"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/abdulwahed/obd2-diagnostic-tool"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,tsx,css,md}",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "tauri icon",
    "clean": "rimraf dist target node_modules/.vite",
    "reinstall": "rimraf node_modules yarn.lock && yarn install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tauri-apps/api": "^2.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tauri-apps/cli": "^2.5.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.4",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "browserslist": {
    "production": [
      "chrome >= 105",
      "safari >= 13"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "@eslint/js/recommended",
      "@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}
